<%include partials/header.ejs%>

<div class = "ui container text main segment">
    <div class = "ui huge header">
        Edit post "<%=blog.title%>" 
    </div>
    <form class = "ui form" action = "/blogs/<%=blog._id%>?_method=PUT" method = "POST">
        <div class = "field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder = "Title of post" value="<%=blog.title%>">
        </div>
        <div class = "field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder = "Post image URL" value="<%=blog.image%>">
        </div>
        <div class = "">
            <label>Text of post</label>
            <textarea name="blog[body]" text ="<%=blog.body%>"><%=blog.body%></textarea>
        </div>
        <input class = "ui violet big basic button" type="submit" value="Save changes">
        <a class = "ui violet big basic button rightPlaced" href="/blogs/<%=blog._id%>">Go back</a>
    </form>
</div>  

<%include partials/footer.ejs%>
