<%include partials/header.ejs%>
<div class = "ui container text main segment">
    <h1 class = "ui huge header"><%=blog.title%></h1>
    <div class = "ui top attached">
        <div class = "item">
            <img class = "ui centered rounded image" src="<%=blog.image%>" alt="">
            <div class = "description">
                <p><%-blog.body%></p>
            </div>
            <div class = "content">
                <p>It was posted at <%=blog.created.toDateString()%></p> 
            </div>
            <p>
                <a class = "ui button violet basic" href="/blogs">Go gack</a>
                <a id = "thisOne" class = "ui button violet basic rightPlaced" href="/blogs/<%=blog._id%>/edit">Change post</a>
            </p>
            <form action = "/blogs/<%=blog._id%>?_method=delete" method = "POST">
                <input type="submit" class = "ui button violet basic big centerPlaced" name="" value="Delete this one">
            </form>
        </div>
    </div>   
</div>
<%include partials/footer.ejs%>